{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "build/dts",
    "emitDeclarationOnly": true,
  },
  "references": [
    { "path": "../js" },
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "**/__tests__"
  ]
}
