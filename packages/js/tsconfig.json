{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": ["../../node_modules/@types", "./src"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "build/dts",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "**/__tests__"
  ]
}
